    "dotenv": "^17.2.3",
    "graphql": "^16.12.0",
    "graphql-type-json": "^0.3.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "rimraf": "^6.0.1",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
